<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/quote_detail_text"
        android:layout_centerInParent="true"
        android:textSize="@dimen/quote_text_size"
        android:fontFamily="sans-serif-medium"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quote_detail_author_name"
        android:textSize="@dimen/author_name_dimen"
        android:gravity="end"
        android:paddingEnd="@dimen/author_margin"
        android:layout_below="@id/quote_detail_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/author_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_favorite_border_white_24px"
        app:elevation="6dp"
        app:borderWidth="0dp"/>

</RelativeLayout>